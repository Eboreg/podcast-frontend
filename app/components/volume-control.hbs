<VolumeControl::Inner class="d-none d-lg-flex" />

<div class="d-lg-none pos-relative" {{on-outside-click this.onOutsideClick}}>
  <span class="material-symbols button" role="button" {{on "click" this.onTriggerButtonClick}} title="Volym">
    {{#if this.audio.isMuted}}
      volume_off
    {{else}}
      volume_up
    {{/if}}
  </span>

  {{#if this.popupVisible}}
    <Popup class="volume-control-popup">
      <VolumeControl::Inner />
    </Popup>
  {{/if}}
</div>
