<aside ...attributes>
  <a href={{@podcast.rss-url}} target="_blank" class="button primary" rel="noopener noreferrer">
    <span class="material-symbols-outlined icon">rss_feed</span>
    <span class="label">RSS-feed</span>
  </a>

  {{#each @podcast.links as |link|}}
    <a href={{link.url}} target="_blank" class="button primary" rel="noopener noreferrer">
      <FaIcon @icon={{link.icon}} class="icon" />
      <span class="label">{{link.label}}</span>
    </a>
  {{/each}}

  <audio src="/airhorn.opus" preload="auto" {{on-audio-insert this.setAirhornElement}}></audio>

  <div class="text-center small attribution">
    Webbsidan tillverkades av
    <a
      href="https://robert.huseli.us/"
      class="bold"
      target="_blank"
      rel="noopener noreferrer"
      {{on "mouseenter" this.onMouseEnterRobert}}
    >Robert</a>
  </div>
  {{#if this.showFlash}}
    <div class="flash-overlay" {{on "animationend" this.onFlashAnimationEnd}}></div>
  {{/if}}

  {{yield}}
</aside>
