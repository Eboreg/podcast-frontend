{{page-title @post.pageTitle}}
<Podcast::Base @podcast={{@podcast}} class="podcast-content-details" ...attributes>
  <Button @route={{@podcast.route}} @models={{@podcast.routeModels}} @theme="secondary" @material-icon="arrow_back">
    <span class="label">Till {{@podcast.name}}</span>
  </Button>
  <Podcast::Content::PostCard @post={{@post}} @expand={{true}}>
    <div class="gap-single px-single column pb-single">
      <Podcast::Content::Description @content={{@post}} />
      <Podcast::Content::Comments @content={{@post}} />
    </div>
  </Podcast::Content::PostCard>
</Podcast::Base>
