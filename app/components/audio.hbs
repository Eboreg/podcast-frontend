  {{on "durationchange" this.refreshAudioData}}
  {{on "loadeddata" this.refreshAudioData}}
  {{on "canplay" this.refreshAudioData}}
  {{on "canplaythrough" this.refreshAudioData}}
  {{on "progress" this.refreshAudioData}}
  {{on "play" this.refreshAudioData}}
  {{on "pause" this.refreshAudioData}}
