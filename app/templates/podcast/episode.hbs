{{page-title @model.pageTitle}}
<Podcast::Base @podcast={{@model.podcast}} class="podcast-content-detail">
  <Button @route="podcast" @model={{@model.podcast}} @theme="secondary" @material-icon="arrow_back">
    <span class="label">Till {{@model.podcast.name}}</span>
  </Button>
  <Podcast::Content::EpisodeCard @episode={{@model}} @start={{this.start}}>
    <Podcast::Content::Description @model={{@model}} />
    {{#if this.showSongs}}
      {{#if @model.songs}}
        <div class="episode-tracklist">
          <h3>Låtar</h3>
          {{#each @model.songs as |song|}}
            <div class="episode-track" {{on "click" (fn this.onSongClick song)}}>
              {{#if song.artistString}}{{song.artistString}} –{{/if}}
              {{song.name}}
              {{#if song.comment}}({{song.comment}}){{/if}}
            </div>
          {{/each}}
        </div>
      {{/if}}
    {{/if}}
  </Podcast::Content::EpisodeCard>
</Podcast::Base>
